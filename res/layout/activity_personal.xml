<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context=".PersonalMain" >

    <!--
         The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc.
    -->

    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="@string/dummy_content"
        android:textColor="#33b5e5"
        android:textSize="50sp"
        android:textStyle="bold" />

    <!--
         This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows.
    -->

    <LinearLayout
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="center_horizontal"
	    android:id="@+id/main_layout"
	    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="妈妈帮--"
            android:textAppearance="?android:attr/textAppearanceLarge" />
		<TextView
            android:id="@+id/title_stat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <ImageView
            android:id="@+id/img_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_geo" />

    </LinearLayout>

	    <ExpandableListView
	        android:id="@+id/expandlist"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="#00000000"
	        android:cacheColorHint="#00000000"
	        android:childDivider="@drawable/list_line"
	        android:layout_weight="10"
	        android:divider="@null"
	        android:visibility="visible"
	        android:listSelector="#00000000" >
	    </ExpandableListView>

	    <RatingBar
	        android:id="@+id/rad_rate"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:layout_weight="5"
	        android:visibility="gone"
	        android:isIndicator="true" />

    <!-- 
    	<TextView
        android:id="@+id/rad_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="5"
        android:text="安全"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40dp" /> -->

    	<LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent" >

            <Button
                android:id="@+id/btn_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/bottom_button_style"
                android:text="主 页" />
            <Button
                android:id="@+id/btn_rpt"             
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/bottom_button_style"
                android:text="上 报" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/button_controls"
            style="@style/bottom_button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            android:columnCount="3"
            android:rowCount="1"
            tools:ignore="UselessParent" >

            <ImageButton
                android:id="@+id/imgbtn_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/bottom_button_style"
                android:src="@drawable/custom_loc" />

            <ImageButton
                android:id="@+id/imgbtn_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/bottom_button_style"
                android:src="@drawable/custom_loc" />

            <ImageButton
                android:id="@+id/imgbtn_conf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/bottom_button_style"
                android:src="@drawable/custom_loc" />
        </LinearLayout>

</LinearLayout>

</FrameLayout>
